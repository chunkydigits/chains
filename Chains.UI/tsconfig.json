{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "dom", 
            "es5"
        ],
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "src/dist",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/app/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}